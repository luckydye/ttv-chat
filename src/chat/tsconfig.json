{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"lib": ["ESNext", "dom", "dom.iterable", "scripthost"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
